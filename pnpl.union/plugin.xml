<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.ui.handlers">
 		<handler class="pnpl.union.handlers.UnionPNHandler" commandId="pnpl.union.command">
 		</handler>
	</extension>
 	<extension point="org.eclipse.ui.menus">
 		<menuContribution allPopups="true" locationURI="popup:org.eclipse.ui.popup.any?after=additions"> 
 			<command commandId="pnpl.union.command" label="Unify Petri Nets">
 				<visibleWhen checkEnabled="false">
 					<iterate>
 						<test property="org.eclipse.core.resources.extension" value="petrinets" />
 					</iterate>
 				</visibleWhen>
 			</command>
 		</menuContribution>
 	</extension> 
</plugin>
